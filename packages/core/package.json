{
  "name": "@web3modal/core",
  "version": "2.0.0",
  "main": "dist/index.js",
  "unpkg": "dist/index.umd.js",
  "type": "module",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:clean": "rm -rf dist",
    "build:types": "tsc --emitDeclarationOnly",
