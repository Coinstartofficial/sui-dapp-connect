    "dev": "rollup --config rollup.config.js --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "valtio": "1.7.0"
  },
  "devDependencies": {
    "@web3modal/ethereum": "2.0.0"
  },
  "peerDependencies": {
    "@web3modal/ethereum": "*"
  },
  "peerDependenciesMeta": {
    "@web3modal/ethereum": {
      "optional": true
    }
  }
}
